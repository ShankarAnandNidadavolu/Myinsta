<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:layout_marginBottom="15dp"
    android:layout_marginRight="25sp"
    android:layout_marginLeft="10sp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ref_serachprofile"
        android:layout_width="300sp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5dp"
        android:src="@drawable/edittext_background" />

    <TextView
        android:id="@+id/ref_searchname"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="110sp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/loginbutton_background"
        android:text="Follow"
        android:layout_weight="1"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:visibility="invisible"
        android:id="@+id/search_followbutton"/>
    <ImageButton
        android:layout_width="30sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7sp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/send_button"
        android:scaleType="centerInside"
        android:background="@null"
        android:visibility="gone"
        android:id="@+id/search_sendmessageicon"/>
    </LinearLayout>
</LinearLayout>